#!/bin/bash

#Include enviroment variables
. $(cd `dirname "${BASH_SOURCE[0]}"` && pwd)/subutai.env

umount $1

mkfs.btrfs -f $1

echo "[Unit]
Description = BTRFS mount

[Mount]
What = $1
Where = /var/snap/$SUBUTAI_APP_TYPE/common/lxc 
Type = btrfs

[Install]
WantedBy = multi-user.target" > $SUBUTAI_SYS_ETC/systemd/system/var-snap-$SUBUTAI_APP_TYPE-common-lxc.mount

systemctl daemon-reload
systemctl start var-snap-$SUBUTAI_APP_TYPE-common-lxc.mount
systemctl enable var-snap-$SUBUTAI_APP_TYPE-common-lxc.mount

mkdir -p /var/snap/$SUBUTAI_APP_TYPE/common/lxc/tmpdir

$SUBUTAI_APP_PREFIX/bin/btrfs quota enable /var/snap/$SUBUTAI_APP_TYPE/common/lxc/tmpdir

echo -e "\nif [ -f /snap/$SUBUTAI_APP_TYPE/current/etc/bash_completion ]; then . /snap/$SUBUTAI_APP_TYPE/current/etc/bash_completion; fi" >> /root/.bashrc 
if [ -d /home/subutai ]; then
	echo -e "\nif [ -f /snap/$SUBUTAI_APP_TYPE/current/etc/bash_completion ]; then . /snap/$SUBUTAI_APP_TYPE/current/etc/bash_completion; fi" >> /home/subutai/.bashrc 
fi
